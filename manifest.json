{
	"name":"Auto Flight Booking",
	"version":"6.2.1",
	"manifest_version" : 2,

	"description":"Ứng dụng trợ giúp mua vé máy bay VietJetAir, JetStar, Vietnam Airlines",
	"homepage_url" : "https://chrome.google.com/webstore/detail/auto-flight-booking/napjhloekijbjlidhihkkfjgdjdmlagp",
	"icons":{
		"16":"icons/icon16.png",
		"48":"icons/icon48.png",
		"128":"icons/icon128.png"
	},
	"default_locale":"vi",

	"background": {
		"page" : "src/bg/background.html",
		"persistent": true
  	},

	"browser_action":{
		"default_icon": {
			"19": "icons/icon19.png",
			"38": "icons/icon38.png"
		},
		"default_title":"Đặt vé máy bay",
		"default_popup":"src/page_action/index.html"
	},

	"permissions":[
		"notifications",
		"tabs",
		"*://baynhe.vn/feed"
	],

	"content_scripts":[
		{
			"matches":["https://ameliaweb5.intelisys.ca/*", "*://book.jetstar.com/*", "*://booknow.jetstar.com/*"],
			"js":["js/jquery/jquery.min.js", "src/inject/inject.js"],
			"run_at": "document_end"
		}
	],
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'"
}
